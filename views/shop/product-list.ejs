<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navbar.ejs') %>
    <div class="container">
        <div class="row">
            <% if (products.length > 0) { %>
            <% products.forEach(product => { %>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="card shadow-sm mt-4">
                    <img class="card-img-top" src="<%= product.imageUrl %>" alt="Card image">
                    <div class="card-overlay d-lg">
                        <button class="btn btn-outline-warning btn-sm">
                            <i class="fa fa-heart-o"></i> Wishlist
                        </button>
                        <button class="btn btn-outline-success btn-sm">
                            <i class="fa fa-shopping-bag"></i> Add to Bag
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="card-title">
                            <a href="/products/<%= product._id %>">
                                <%= product.title.slice(0, 23) %>
                            </a>                            
                        </div>
                        <div class="card-text">
                            <span>Rs. <%= product.price %></span>
                            <span class="text-muted ml-1"
                                style="text-decoration: line-through">Rs.<%= product.price %></span>
                            <span class="text-warning ml-1">(60% Off)</span>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
            <% } else { %>
            <div class="col">
                <h4 class="text-center mt-5">No Products added yet!</h4>
                <p class="mb-5"></p>
            </div>
            <% }%>
        </div>
    </div>

    <%- include('../includes/end.ejs') %>