<%- include('../includes/head.ejs') %>
</head>

<body>
   <%- include('../includes/navbar.ejs') %>

   <div class="container">

      <div class="row mt-2">
         <div class="col">
            <div class="card card-shadow">
               <div class="card-body">
                  <div class="card-text">
                     <h4>Let's add a Product</h4>
                  </div>
                  <form method="POST" class="mt-4"
                     action="<% if(editing) { %>/admin/edit-product<% } else { %>/admin/add-product<% }%>">

                     <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                     <div class="row">
                        <div class="col-lg-6">
                           <div class="form-group">
                              <label for="title">Title</label>
                              <input type="text" class="form-control" id="title" name="title"
                                 value="<% if(editing) { %><%= product.title %><% } %>">
                           </div>
                        </div>
                        <div class="col-lg-3">
                           <div class="form-group">
                              <label for="price">Price</label>
                              <input type="number" step="0.01" class="form-control" id="price" name="price"
                                 value="<% if(editing) { %><%= product.price %><% } %>">
                           </div>
                        </div>
                        <div class="col-lg-3">
                           <div class="form-group">
                              <label for="rating">Rating</label>
                              <input type="number" step="0.1" class="form-control" id="rating" name="rating"
                                 value="<% if(editing) { %><%= product.meta.rating %><% } %>">
                           </div>
                        </div>
                     </div>
                     <div class="row">
                        <div class="col">
                           <div class="form-group">
                              <label for="imageUrl">image URL</label>
                              <input type="text" class="form-control" id="imageUrl" name="imageUrl"
                                 value="<% if(editing) { %><%= product.imageUrl %><% } %>">
                           </div>
                        </div>
                     </div>
                     <div class="row">
                        <div class="col">
                           <div class="form-group">
                              <label for="description">Description</label>
                              <textarea rows="4" class="form-control" id="description"
                                 name="description"><% if(editing) { %><%= product.description %><% } %></textarea>
                           </div>
                        </div>
                     </div>
                     <% if(editing) { %>
                     <input type="hidden" name="id" value="<%= product._id %>">
                     <% } %>
                     <div class="row">
                        <div class="col">
                           <button type="submit" class="btn btn-success">Save</button>
                           <a href="/admin/products" class="btn btn-primary">Cancel</a>
                        </div>
                     </div>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </div>

   <%- include('../includes/end.ejs') %>