<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navbar.ejs') %>
    <div class="container">
        <div class="row mt-2">
            <div class="col">
                <div class="card card-shadow">
                    <div class="card-body">
                        <div class="card-text text-right">
                            <a href="/admin/add-product" class="btn btn-success btn-sm">Add Product</a>
                        </div>
                        <% if (products.length > 0) { %>
                        <table class="table table-bordered mt-2">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Title</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach((product, i) => { %>
                                <tr>
                                    <td><%= i+1 %></td>
                                    <td class="text-left"> 
                                        <img src="<%= product.imageUrl %>" alt="" height="18px">
                                        <%= product.title %>
                                    </td>
                                    <td><%= product.price %></td>
                                    <td>
                                        <a href="/admin/edit-product/<%= product._id %>" class="btn btn-sm btn-primary">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <form action="/admin/delete-product" method="POST" class="d-inline">
                                            <input type="hidden" name="id" value="<%= product._id %>">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                        <% } else { %>
                        <h4 class="text-center mt-5">No Products added yet!</h4>
                        <p class="mb-5"></p>
                        <% }%>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../includes/end.ejs') %>